<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eastday.demo.dao.IUserDao">

    <insert id="addUser" parameterType="com.eastday.demo.entity.User" useGeneratedKeys="true" keyProperty="uid">
        insert into `user`(phone,creat_time) value (#{phone},now())
    </insert>

    <insert id="addMobile" parameterType="com.eastday.demo.entity.Mobile">
        insert into mobile(phone,code,dead_line,usable) values (#{phone},#{code},#{dead_line},#{usable})
    </insert>

    <select id="findUserByPhone" parameterType="String" resultType="com.eastday.demo.entity.User">
        SELECT uid,phone FROM `user` where phone=#{phone}
    </select>

    <update id="refreshLastLoginTime" parameterType="com.eastday.demo.entity.User">
        UPDATE `user` u,mobile m set u.last_login_time=now(),u.access_token=#{access_token},m.usable=1 WHERE u.phone=m.phone and m.phone=#{phone}
    </update>

    <select id="findUserAndCode" parameterType="java.util.Map" resultType="com.eastday.demo.entity.Mobile">
        select phone,dead_line,usable FROM mobile where phone=#{phone} and code=#{code}
    </select>

    <update id="updMobileInfo" parameterType="com.eastday.demo.entity.Mobile">
        update mobile set code=#{code},dead_line=#{dead_line},usable=#{usable} where phone=#{phone}
    </update>
</mapper>