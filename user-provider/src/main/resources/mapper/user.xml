<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dfw.demo.dao.IUserDao">

    <insert id="addUser" parameterType="com.dfw.demo.entity.User" useGeneratedKeys="true" keyProperty="uid">
        insert into `user`(phone,code,dead_line,usable,createTime) value (#{phone},#{code},#{dead_line},#{usable},now())
    </insert>

    <select id="findUserByPhone" parameterType="String" resultType="com.dfw.demo.entity.User">
        SELECT * FROM `user` where phone=#{phone}
    </select>

    <update id="refreshLastLoginTime" parameterType="String">
        UPDATE `user` set lastLoginTime=now(),usable=1 WHERE phone=#{phone}
    </update>

    <select id="findUserAndCode" parameterType="com.dfw.demo.entity.User" resultType="com.dfw.demo.entity.User">
        select * FROM `user` where phone=#{phone} and code=#{code}
    </select>

    <update id="updCodeInfo" parameterType="com.dfw.demo.entity.User">
        update `user` set code=#{code},dead_line=#{dead_line},usable=#{usable} where phone=#{phone}
    </update>
</mapper>